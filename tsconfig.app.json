{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./out-tsc/app",
    "types": [
      "node"
    ],
    "paths": {
      "jszip": [
        "../node_modules/jszip/dist/jszip.min.js"
      ],
      "exceljs": [
        "node_modules/exceljs/dist/exceljs.min.js"
      ]
    }
  },
  "files": [
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "include": [
    "src/**/*.module.ts",
    "src/**/*.model.ts",
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts"
  ]
}
